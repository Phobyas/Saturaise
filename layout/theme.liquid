  <style>

    
    /* Keep original styles */
    .header-spacer {
      height: 106px !important; 
      display: block;
      width: 100%;
      contain: layout;
    }
    
    /* Stabilize the page layout immediately */
    .page-wrap {
      width: 100%;
      margin-top: 0; /* We already have header-spacer, so no margin needed */
      contain: layout;
    }
  
    /* Critical CSS to prevent CLS */
    .site-wrap {
      width: 100%;
    }
    
    /* Stabilize logo containers - removed contain to prevent icon issues */
    .site-logo, 
    .mobile-nav__logo-wrapper {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      min-height: 60px;
    }
    
    /* Collection badges section stabilization */
    .collection-badges-section {
      min-height: 80px;
      overflow: visible;
      contain: layout;
    }
    
    /* Add complete badge scroller styles */
    #badgeScroller {
      height: 80px;
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      -ms-overflow-style: none;
      scrollbar-width: none;
      scroll-behavior: smooth;
      display: flex;
      align-items: center;
      gap: 12px;
    
    }
    
    #badgeScroller::-webkit-scrollbar {
      display: none;
    }
    
    .badge-item {
      flex: 0 0 auto;
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 8px 16px;
      background-color: #EEEEEE;
      border-radius: 8px;
      height: 64px;
      min-width: 120px;
      white-space: nowrap;
      transition: transform 0.2s ease;
    }
    
    .badge-image-container {
      width: 48px;
      height: 48px;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      background-color: #f5f5f5;
      overflow: hidden;
    }
    
    @media (max-width: 767px) {
      /* Keep the same fixed height for mobile to prevent CLS */
      .header-spacer {
        height: 106px !important;
      }
      
      .collection-badges-section {
        min-height: 70px;
      }
      
      #badgeScroller {
        height: 70px;
   
        gap: 8px;
      }
      
      .badge-item {
        height: 54px;
        min-width: 100px;
        padding: 6px 12px;
      }
      
      .badge-image-container {
        width: 40px;
        height: 40px;
      }
    }
    
    /* Navigation containers - removed contain to prevent icon issues */
    .section-header__main-bar {
      position: fixed;
      top: var(--announcement-bar-height, 40px);
      left: 0;
      right: 0;
      height: var(--header-height, 66px);
      z-index: 999;
    }
    
    .mobile-nav__mobile-header {
      position: fixed !important;
      top: var(--announcement-bar-height, 40px) !important;
      height: var(--header-height, 66px) !important;
    }
    
    /* Basic image optimization WITHOUT affecting product images */
    img[width][height]:not(.product-loop__img-wrapper img):not(.product-image img) {
      aspect-ratio: attr(width) / attr(height);
    }
    
    /* Logo image sizing */
    .header__img-logo img,
    .mobile-nav__img-logo img {
      width: 100%;
      height: auto;
      display: block;
    }
    
    /* Hide elements before JS loads */
    .no-js .js-slideout-toggle-wrapper,
    .no-js .js-modal-toggle-wrapper {
      opacity: 0;
    }
    
    /* Site overlay style to prevent flashing */
    .site-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 10;
      background-color: rgba(0, 0, 0, 0.5);
    }
    
    /* Add font display swap for better performance */
    @font-face {
      font-display: swap;
    }
    
    /* Featured collection stabilization WITHOUT affecting products */
    .section-featured-collection__wrapper--carousel {
      position: relative;
      min-height: 400px;
    }
    
    /* Prevent layout shift from carousels during initialization */
    .carousel-loaded--false,
    .carousel-loaded--true,
    .featured-collection__wrapper--loop.js-carousel {
      opacity: 1 !important;
      transition: none !important;
    }
    
    /* Fix for Flickity initialization WITHOUT transform */
    .flickity-viewport {
      min-height: 300px;
    }
    
    /* Additional performance optimizations - SAFE for all elements */
    .js-slideout-toggle-wrapper,
    .js-modal-toggle-wrapper {
      opacity: 1 !important;
    }

    /* Prevent content jumping during font loading */
    body {
      font-display: swap;
      text-rendering: optimizeLegibility;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* GPU acceleration ONLY for slideouts and modals - not overlays */
    .slideout,
    .modal {
      transform: translateZ(0);
      backface-visibility: hidden;
    }
    
    /* GPU acceleration only for specific non-cart buttons and links */
    /* Removed general button/link acceleration to prevent cart icon shift */

    /* Optimize mobile navigation performance - removed contain to prevent icon issues */
    @media (max-width: 767px) {
      .js-carousel {
        scroll-behavior: smooth;
        -webkit-overflow-scrolling: touch;
      }
    }

    /* Prevent CLS for price elements */
    .product-loop__price {
      min-height: 24px;
    }
    
    /* Single image gallery fix */
    .single-image-gallery .flickity-slider,
    .single-image-gallery .product__media-list,
    .single-image-gallery .product-gallery__carousel {
      transform: none !important;
      transition: none !important;
    }
    
    .single-image-gallery .flickity-page-dots,
    .single-image-gallery .slider-buttons,
    .single-image-gallery .flickity-prev-next-button {
      display: none !important;
    }
    
    .single-image-gallery .image-slide,
    .single-image-gallery .scroll--gallery_item,
    .single-image-gallery .carousel-cell,
    .single-image-gallery .product__media-item {
      position: relative !important;
      left: 0 !important;
      opacity: 1 !important;
      visibility: visible !important;
      pointer-events: auto !important;
      touch-action: pan-y !important;
    }
    
    /* Prevent layout shift for ALL slideshow images */
    .slideshow__slide-image img {
      width: 100%;
      height: auto;
      aspect-ratio: 1920/800;
    }
    
    /* Ensure first slide is visible and prioritized */
    .slideshow__slide:first-child {
      opacity: 1 !important;
      visibility: visible !important;
    }
    
    .slideshow__slide:first-child img {
      /* Mark as high priority */
      content-visibility: auto;
    }

    /* Fix for unsized images - but NOT product images */
    img:not([width]):not([height]):not(.product-loop__img-wrapper img):not(.product-image img) {
      width: 100%;
      height: auto;
    }

    /* Stabilize featured collection section WITHOUT affecting product items */
    .section-featured-collection {
      min-height: 400px;
    }

    @media (max-width: 767px) {
      .section-featured-collection {
        min-height: 350px;
      }
    }
  </style>

