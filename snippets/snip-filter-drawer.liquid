        setTimeout(() => {
          // Check which menu should be active by default
          const filterMenu = drawer.querySelector('[data-menu-handle="filter"]');
          const sortMenu = drawer.querySelector('[data-menu-handle="sort"]');
          
          // Default to filter menu unless conditions dictate otherwise
          if (filterMenu && sortMenu) {
            if (collection && collection.all_products_count >= 1000) {
              // When collection is large, show sort by default
              filterMenu.style.display = 'none';
              filterMenu.classList.remove('active--menu');
              sortMenu.style.display = 'block';
              sortMenu.classList.add('active--menu');
            } else {
              // Otherwise show filters by default
              filterMenu.style.display = 'block';
              filterMenu.classList.add('active--menu');
              sortMenu.style.display = 'none';
              sortMenu.classList.remove('active--menu');
            }
