  // Keep drawer open
  function setupPermanentDrawer() {
    const drawer = document.querySelector('[data-wau-slideout="collection-filters"]');
    if (!drawer) return;
    
    const originalCloseByName = WAU.Slideout._closeByName;
    
    WAU.Slideout._closeByName = function(name) {
      if (name === 'collection-filters') {
        if (drawer.getAttribute('data-should-close') === 'true') {
          drawer.removeAttribute('data-should-close');
          originalCloseByName.call(this, name);
        }
      } else {
        originalCloseByName.call(this, name);
      }
    };
    
    // Use event delegation for close button
    document.addEventListener('click', function(e) {
      const closeButton = e.target.closest('.filter-drawer__wrapper .js-slideout-close');
      if (!closeButton) return;
      
      drawer.setAttribute('data-should-close', 'true');
      WAU.Slideout._closeByName('collection-filters');
    });
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && drawer.classList.contains('slideout--active')) {
        drawer.setAttribute('data-should-close', 'true');
        WAU.Slideout._closeByName('collection-filters');
      }
    });
    
    // Use event delegation for overlay clicks
    document.addEventListener('click', function(e) {
      const overlay = e.target.closest('.js-slideout-overlay');
      if (!overlay || e.target !== overlay) return;
      
      drawer.setAttribute('data-should-close', 'true');
      WAU.Slideout._closeByName('collection-filters');
    });
  }
  
  // Handle price range changes
  function setupPriceRangeHandlers() {
    // Use event delegation for price range changes
    let priceRangeTimeout;
    
    function updatePriceRangeUI(priceRange, isActive) {
      if (priceRange) {
        if (isActive) {
          priceRange.classList.add('active');
        } else {
          priceRange.classList.remove('active');
        }
      }
    }
    
    function syncSliderAndInput(priceRange, inputType, value) {
      const minInput = priceRange.querySelector('.js-price-min-output');
      const maxInput = priceRange.querySelector('.js-price-max-output');
      const sliders = priceRange.querySelectorAll('.filter-range__slider--input');
      
      if (!minInput || !maxInput || sliders.length < 2) return;
      
      if (inputType === 'min') {
        minInput.value = value;
        sliders[0].value = value;
        
        // Ensure min doesn't exceed max
        if (parseInt(minInput.value) > parseInt(maxInput.value)) {
          maxInput.value = minInput.value;
          sliders[1].value = minInput.value;
        }
      } else if (inputType === 'max') {
        maxInput.value = value;
        sliders[1].value = value;
        
        // Ensure max doesn't fall below min
        if (parseInt(maxInput.value) < parseInt(minInput.value)) {
          minInput.value = maxInput.value;
          sliders[0].value = maxInput.value;
        }
      }
    }
    
    function handlePriceRangeRequest(priceRange) {
      if (isLoading) return;
      
      clearTimeout(priceRangeTimeout);
      
      priceRangeTimeout = setTimeout(function() {
        const minInput = priceRange.querySelector('.js-price-min-output');
        const maxInput = priceRange.querySelector('.js-price-max-output');
        
        if (!minInput || !maxInput) return;
        
        const minVal = parseInt(minInput.value) || 0;
        const maxVal = parseInt(maxInput.value) || parseInt(maxInput.getAttribute('max'));
        const maxDefaultVal = parseInt(maxInput.getAttribute('max'));
        
        // Check if price filter is active
        const isPriceFilterActive = minVal > 0 || (maxVal && maxVal < maxDefaultVal);
        updatePriceRangeUI(priceRange, isPriceFilterActive);
        
        // Build URL with price filters
        const url = new URL(window.location.href);
        if (minVal > 0) url.searchParams.set('filter.v.price.gte', minVal * 100);
        else url.searchParams.delete('filter.v.price.gte');
        
        if (maxVal < maxDefaultVal) url.searchParams.set('filter.v.price.lte', maxVal * 100);
        else url.searchParams.delete('filter.v.price.lte');
        
        isLoading = true;
        document.querySelector('.filter-drawer__wrapper').classList.add('is-loading');
        
        // Set up timeout
        const controller = new AbortController();
        const timeoutId = setTimeout(() => {
          controller.abort();
          resetLoadingState();
          console.error('Price range request timed out');
        }, 10000);
        
        fetch(url.toString(), {
          signal: controller.signal,
          headers: {
            'X-Requested-With': 'XMLHttpRequest'
          }
        })
        .then(response => {
          clearTimeout(timeoutId);
          if (!response.ok) throw new Error('Network response was not ok');
          return response.text();
        })
        .then(html => {
          updateUIFromResponse(html);
          
          // Keep drawer open
          const drawer = document.querySelector('[data-wau-slideout="collection-filters"]');
          if (drawer) {
            drawer.classList.add('slideout--active');
            drawer.setAttribute('aria-hidden', 'false');
            
            // Ensure overlay is visible
            const overlay = document.querySelector('.js-slideout-overlay');
            if (overlay) {
              overlay.classList.add('is-active');
              overlay.setAttribute('aria-hidden', 'false');
            }
          }
          
          // Reset loading state
          resetLoadingState();
          
          // Update URL
          window.history.pushState({}, '', url.toString());
        })
        .catch(error => {
          clearTimeout(timeoutId);
          console.error('Error:', error);
          resetLoadingState();
        });
      }, 800); // Shorter timeout for better responsiveness
    }
    
    // Handle price input changes
    document.addEventListener('change', function(e) {
      if (!e.target.classList.contains('js-filter-range-input')) return;
      
      const priceRange = e.target.closest('.filter--price-range');
      if (!priceRange) return;
      
      // Determine input type
      if (e.target.classList.contains('js-price-min-output')) {
        syncSliderAndInput(priceRange, 'min', e.target.value);
      } else if (e.target.classList.contains('js-price-max-output')) {
        syncSliderAndInput(priceRange, 'max', e.target.value);
      }
      
      handlePriceRangeRequest(priceRange);
    });
    
    // Handle slider changes
    document.addEventListener('input', function(e) {
      if (!e.target.classList.contains('filter-range__slider--input')) return;
      
      const priceRange = e.target.closest('.filter--price-range');
      if (!priceRange) return;
      
      const sliders = priceRange.querySelectorAll('.filter-range__slider--input');
      if (sliders.length < 2) return;
      
      // Determine slider type (min or max)
      if (e.target === sliders[0]) {
        syncSliderAndInput(priceRange, 'min', e.target.value);
      } else if (e.target === sliders[1]) {
        syncSliderAndInput(priceRange, 'max', e.target.value);
      }
      
      handlePriceRangeRequest(priceRange);
    });
    
    // Initialize price range UI state
    const priceRange = document.querySelector('.filter--price-range');
    if (priceRange) {
      const minInput = priceRange.querySelector('.js-price-min-output');
      const maxInput = priceRange.querySelector('.js-price-max-output');
      
      if (minInput && maxInput) {
        const minVal = parseInt(minInput.value) || 0;
        const maxVal = parseInt(maxInput.value) || parseInt(maxInput.getAttribute('max'));
        const maxDefaultVal = parseInt(maxInput.getAttribute('max'));
        
        updatePriceRangeUI(priceRange, minVal > 0 || (maxVal && maxVal < maxDefaultVal));
      }
    }
  }
  
  // Handle drawer menu switching based on button clicked
  function setupDrawerMenuSwitching() {
    const drawer = document.querySelector('[data-wau-slideout="collection-filters"]');
