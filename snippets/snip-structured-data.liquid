

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {% comment %} Organization Schema - ZAWSZE obecny {% endcomment %}
    {
      "@type": "Organization",
      "@id": "https://saturaise.com/#organization",
      "name": "Saturaise",
      "alternateName": "Saturaise Sneakers",
      "url": "https://saturaise.com",
      "logo": {
        "@type": "ImageObject",
        "url": "https://saturaise.com/cdn/shop/files/logo-new-saturaise2.png",
        "width": 600,
        "height": 60
      },
      "image": "https://saturaise.com/cdn/shop/files/logo-new-saturaise2.png",
      "description": "Saturaise to działająca od trzech lat firma specjalizująca się w sprzedaży najbardziej pożądanych na rynku butów oraz ubrań z gwarancją autentyczności każdego przedmiotu.",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Ogrodowa 9a",
        "addressLocality": "Żyrowa",
        "postalCode": "47-330",
        "addressCountry": "PL"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+48451108247",
        "email": "saturaisekontakt@gmail.com",
        "contactType": "customer service",
        "availableLanguage": "Polish",
        "hoursAvailable": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "16:00"
        }
      },
      "foundingDate": "2022",
      "areaServed": "PL",
      "sameAs": [
        "https://saturaise.com"
        {%- if settings.facebook_url != blank -%},"{{ settings.facebook_url }}"{% endif -%}
        {%- if settings.twitter_url != blank -%},"{{ settings.twitter_url }}"{% endif -%}
        {%- if settings.pinterest_url != blank -%},"{{ settings.pinterest_url }}"{% endif -%}
        {%- if settings.instagram_url != blank -%},"{{ settings.instagram_url }}"{% endif -%}
      ]
    },
    
    {% comment %} WebSite Schema - ZAWSZE obecny {% endcomment %}
    {
      "@type": "WebSite",
      "@id": "https://saturaise.com/#website",
      "url": "https://saturaise.com",
      "name": "Saturaise",
      "description": "Limitowane sneakersy Nike, Adidas, Jordan - oryginalne buty i kolekcjonerskie figurki",
      "publisher": {
        "@id": "https://saturaise.com/#organization"
      },
      "inLanguage": "pl-PL",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://saturaise.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    
    {% comment %} SEARCH PAGE SCHEMA {% endcomment %}
    {% if template contains 'search' %}
    ,{
      "@type": "SearchResultsPage",
      "@id": "{{ shop.url }}/search?q={{ search.terms | url_encode }}#searchresultspage",
      "url": "{{ shop.url }}/search?q={{ search.terms | url_encode }}",
      "name": "Wyniki wyszukiwania: {{ search.terms }} | Saturaise",
      "description": "Znaleziono {{ search.results_count }} {% if search.results_count == 1 %}wynik{% elsif search.results_count < 5 %}wyniki{% else %}wyników{% endif %} dla \"{{ search.terms }}\" w sklepie Saturaise",
      "isPartOf": {
        "@id": "https://saturaise.com/#website"
      },
      {% if search.results_count > 0 %}
      "mainEntity": {
        "@type": "ItemList",
        "numberOfItems": {{ search.results_count }},
        "itemListElement": [
          {% assign result_count = 0 %}
          {% for item in search.results limit: 20 %}
            {% if item.object_type == 'product' %}
              {% assign result_count = result_count | plus: 1 %}
              {
                "@type": "ListItem",
                "position": {{ result_count }},
                "item": {
                  "@type": "Product",
                  "@id": "{{ shop.url }}{{ item.url }}#product",
                  "name": {{ item.title | json }},
                  "url": "{{ shop.url }}{{ item.url }}",
                  {% if item.featured_image %}
                  "image": "{{ item.featured_image | image_url: width: 800 }}",
                  {% endif %}
                  "description": {% if item.description != blank %}{{ item.description | strip_html | truncatewords: 50 | json }}{% else %}{{ item.title | json }}{% endif %},
                  {% if item.vendor != blank %}
                  "brand": {
                    "@type": "Brand",
                    "name": {{ item.vendor | json }}
                  },
                  {% endif %}
                  "sku": {{ item.selected_or_first_available_variant.sku | default: item.selected_or_first_available_variant.id | json }},
                  {% if item.available %}
                  "offers": {
                    "@type": "{% if item.variants.size > 1 %}AggregateOffer{% else %}Offer{% endif %}",
                    "priceCurrency": "{{ shop.currency }}",
                    {% if item.variants.size > 1 %}
                    "lowPrice": "{{ item.price_min | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    "highPrice": "{{ item.price_max | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    "offerCount": {{ item.variants.size }},
                    {% else %}
                    "price": "{{ item.price | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    {% endif %}
                    "availability": "https://schema.org/InStock",
                    "seller": {
                      "@id": "https://saturaise.com/#organization"
                    },
                    "url": "{{ shop.url }}{{ item.url }}",
                    "priceValidUntil": "{{ 'now' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' }}"
                  }
                  {% else %}
                  "offers": {
                    "@type": "Offer",
                    "priceCurrency": "{{ shop.currency }}",
                    "price": "{{ item.price | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    "availability": "https://schema.org/OutOfStock",
                    "seller": {
                      "@id": "https://saturaise.com/#organization"
                    },
                    "url": "{{ shop.url }}{{ item.url }}"
                  }
                  {% endif %}
                }
              }{% unless forloop.last %},{% endunless %}
            {% endif %}
          {% endfor %}
        ]
      },
      {% endif %}
      "query": {{ search.terms | json }},
      "resultStats": {
        "@type": "SearchAction",
        "result": {
          "@type": "EntryPoint",
          "name": "Saturaise Search Results",
          "description": "{{ search.results_count }} {% if search.results_count == 1 %}produkt znaleziony{% elsif search.results_count < 5 %}produkty znalezione{% else %}produktów znalezionych{% endif %} dla zapytania {{ search.terms }}"
        }
      }
    }
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}/search?q={{ search.terms | url_encode }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://saturaise.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Wyszukiwanie: {{ search.terms }}",
          "item": "{{ shop.url }}/search?q={{ search.terms | url_encode }}"
        }
      ]
    }
    {% endif %}
    
    {% comment %} BLOG SCHEMA {% endcomment %}
    {% if template contains 'blog' and blog %}
    ,{
      "@type": "Blog",
      "@id": "{{ shop.url }}{{ blog.url }}#blog",
      "url": "{{ shop.url }}{{ blog.url }}",
      "name": {{ blog.title | json }},
      "description": {% if blog.summary != blank %}{{ blog.summary | strip_html | json }}{% else %}"{{ blog.title }} - aktualności ze świata sneakersów"{% endif %},
      "inLanguage": "pl-PL",
      "isPartOf": {
        "@id": "https://saturaise.com/#website"
      },
      "publisher": {
        "@id": "https://saturaise.com/#organization"
      },
      {% if blog.tags.size > 0 %}
      "keywords": {{ blog.tags | join: ', ' | json }},
      {% endif %}
      "blogPost": [
        {% for article in blog.articles limit: 10 %}
        {
          "@type": "BlogPosting",
          "@id": "{{ shop.url }}{{ article.url }}#blogposting",
          "headline": {{ article.title | strip_html | json }},
          "description": {% if article.summary != blank %}{{ article.summary | strip_html | json }}{% else %}{{ article.excerpt_or_content | strip_html | truncatewords: 30 | json }}{% endif %},
          "url": "{{ shop.url }}{{ article.url }}",
          "datePublished": "{{ article.created_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
          "dateModified": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
          {% if article.image %}
          "image": {
            "@type": "ImageObject",
            "url": "{{ article.image | image_url: width: 1200 }}",
            "width": 1200,
            "height": 630
          },
          {% endif %}
          "author": {
            "@type": "Person",
            "name": {% if article.author != blank %}{{ article.author | json }}{% else %}"Saturaise"{% endif %}
          },
          "publisher": {
            "@id": "https://saturaise.com/#organization"
          },
          {% if article.tags.size > 0 %}
          "keywords": {{ article.tags | join: ', ' | json }},
          {% endif %}
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ article.url }}"
          },
          "isPartOf": {
            "@id": "{{ shop.url }}{{ blog.url }}#blog"
          }
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]
    }
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}{{ blog.url }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://saturaise.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": "{{ shop.url }}{{ blog.url }}"
        }
      ]
    }
    {% endif %}
    
    {% comment %} ARTICLE SCHEMA {% endcomment %}
    {% if template contains 'article' %}
    ,{
      "@type": "BlogPosting",
      "@id": "{{ shop.url }}{{ article.url }}#blogposting",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ shop.url }}{{ article.url }}"
      },
      "headline": {{ article.title | strip_html | json }},
      "description": {% if article.summary != blank %}{{ article.summary | strip_html | json }}{% else %}{{ article.excerpt_or_content | strip_html | truncatewords: 30 | json }}{% endif %},
      "datePublished": "{{ article.created_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
      "dateModified": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
      "author": {
        "@type": "Person",
        "name": {% if article.author != blank %}{{ article.author | json }}{% else %}"Saturaise"{% endif %}
      },
      {% if article.image %}
      "image": {
        "@type": "ImageObject",
        "url": "{{ article.image | image_url: width: 1200 }}",
        "width": 1200,
        "height": 630
      },
      {% endif %}
      {% if article.tags.size > 0 %}
      "keywords": {{ article.tags | join: ', ' | json }},
      {% endif %}
      "publisher": {
        "@id": "https://saturaise.com/#organization"
      },
      "isPartOf": {
        "@id": "{{ shop.url }}{{ blog.url }}#blog"
      }
    }
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}{{ article.url }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://saturaise.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": "{{ shop.url }}{{ blog.url }}"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": {{ article.title | json }},
          "item": "{{ shop.url }}{{ article.url }}"
        }
      ]
    }
    {% endif %}
    
    {% comment %} PRODUCT PAGE SCHEMA - tylko jeśli nie ma duplikacji {% endcomment %}
    {% if template contains 'product' %}
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}{{ product.url }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://saturaise.com"
        }
        {% if collection.url %}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ collection.title | json }},
          "item": "{{ shop.url }}{{ collection.url }}"
        }
        ,{
          "@type": "ListItem",
          "position": 3,
          "name": {{ product.title | json }},
          "item": "{{ shop.url }}{{ product.url }}"
        }
        {% else %}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ product.title | json }},
          "item": "{{ shop.url }}{{ product.url }}"
        }
        {% endif %}
      ]
    }
    ,{
      "@type": "Product",
      "@id": "{{ shop.url }}{{ product.url }}#product",
      "url": "{{ shop.url }}{{ product.url }}",
      "name": {{ product.title | strip_html | json }},
      "description": {% if product.description != blank %}{{ product.description | strip_html | truncatewords: 100 | json }}{% else %}{{ product.title | json }}{% endif %},
      
      {% comment %} Brand Information {% endcomment %}
      {% if product.vendor != blank %}
      "brand": {
        "@type": "Brand",
        "name": {{ product.vendor | json }}
      },
      "manufacturer": {
        "@type": "Organization", 
        "name": {{ product.vendor | json }}
      },
      {% endif %}
      
      {% comment %} Product Images {% endcomment %}
      {% if product.images.size > 0 %}
      "image": [
        {% for image in product.images limit: 8 %}
        "{{ image | image_url: width: 1200 }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      {% endif %}
      
      {% comment %} Product Category and Type {% endcomment %}
      "category": {% if product.type != blank %}{{ product.type | json }}{% else %}"Sneakers"{% endif %},
      "productID": {{ product.id | json }},
      
      {% comment %} SKU and GTIN handling {% endcomment %}
      "sku": {{ product.selected_or_first_available_variant.sku | default: product.selected_or_first_available_variant.id | json }},
      {% if product.selected_or_first_available_variant.barcode != blank %}
        {% assign barcode_length = product.selected_or_first_available_variant.barcode | size %}
        {% if barcode_length == 12 %}
      "gtin12": {{ product.selected_or_first_available_variant.barcode | json }},
        {% elsif barcode_length == 13 %}
      "gtin13": {{ product.selected_or_first_available_variant.barcode | json }},
        {% elsif barcode_length == 14 %}
      "gtin14": {{ product.selected_or_first_available_variant.barcode | json }},
        {% else %}
      "gtin": {{ product.selected_or_first_available_variant.barcode | json }},
        {% endif %}
      {% endif %}
      
      {% comment %} Item Condition {% endcomment %}
      "itemCondition": "https://schema.org/NewCondition",
      
      {% comment %} Sneaker-Specific Additional Properties {% endcomment %}
      "additionalProperty": [
        {% comment %} Detect colorway information {% endcomment %}
        {% assign detected_colorway = "" %}
        {% assign title_lower = product.title | downcase %}
        
        {% if title_lower contains 'chicago' %}
          {% assign detected_colorway = "Chicago" %}
        {% elsif title_lower contains 'bred' %}
          {% assign detected_colorway = "Bred" %}
        {% elsif title_lower contains 'royal' %}
          {% assign detected_colorway = "Królewski Niebieski" %}
        {% elsif title_lower contains 'shadow' %}
          {% assign detected_colorway = "Shadow" %}
        {% elsif title_lower contains 'court purple' %}
          {% assign detected_colorway = "Fioletowy Sądowy" %}
        {% elsif title_lower contains 'pine green' %}
          {% assign detected_colorway = "Sosnowa Zieleń" %}
        {% elsif title_lower contains 'dark green' %}
          {% assign detected_colorway = "Ciemnozielony" %}
        {% elsif title_lower contains 'university blue' %}
          {% assign detected_colorway = "Uniwersytecki Niebieski" %}
        {% elsif title_lower contains 'hyper royal' %}
          {% assign detected_colorway = "Hyper Royal" %}
        {% elsif title_lower contains 'travis scott' %}
          {% assign detected_colorway = "Travis Scott" %}
        {% elsif title_lower contains 'off white' or title_lower contains 'off-white' %}
          {% assign detected_colorway = "Off-White" %}
        {% elsif title_lower contains 'fragment' %}
          {% assign detected_colorway = "Fragment" %}
        {% elsif title_lower contains 'sb navy' or title_lower contains 'navy' %}
          {% assign detected_colorway = "SB Navy" %}
        {% endif %}
        
        {% if detected_colorway != "" %}
        {
          "@type": "PropertyValue",
          "name": "Kolorystyka",
          "value": {{ detected_colorway | json }}
        },
        {% endif %}
        
        {% comment %} Authentication Property {% endcomment %}
        {
          "@type": "PropertyValue", 
          "name": "Status Autentyczności",
          "value": "100% Oryginalne - Zweryfikowane przez Saturaise"
        },
        
        {% comment %} Condition Grade {% endcomment %}
        {
          "@type": "PropertyValue",
          "name": "Stan",
          "value": "Zupełnie nowe w oryginalnym pudełku"
        }
        
        {% comment %} Release Date Detection {% endcomment %}
        {% if product.created_at %}
        ,{
          "@type": "PropertyValue",
          "name": "Data Dodania", 
          "value": "{{ product.created_at | date: '%Y-%m-%d' }}"
        }
        {% endif %}
      ],
      
      {% comment %} Authentication Certification {% endcomment %}
      "hasCertification": {
        "@type": "Certification",
        "name": "Gwarancja Autentyczności Saturaise",
        "certificationIdentification": "SATURAISE-AUTH-{{ product.id }}",
        "issuedBy": {
          "@type": "Organization",
          "name": "Saturaise",
          "url": "https://saturaise.com"
        }
      },
      
      {% comment %} Enhanced Offers with Polish Market Compliance {% endcomment %}
      {% if product.available %}
      "offers": {% if product.variants.size > 1 %}{
        "@type": "AggregateOffer",
        "priceCurrency": "PLN",
        "lowPrice": "{{ product.price_min | money_without_currency | remove: ',' | replace: ',', '.' }}",
        "highPrice": "{{ product.price_max | money_without_currency | remove: ',' | replace: ',', '.' }}",
        "offerCount": {{ product.variants.size }},
        "offers": [
          {% for variant in product.variants %}
          {
            "@type": "Offer",
            "name": "{{ product.title }}{% if variant.title != 'Default Title' %} - {{ variant.title }}{% endif %}",
            "price": "{{ variant.price | money_without_currency | remove: ',' | replace: ',', '.' }}",
            "priceCurrency": "PLN",
            "priceValidUntil": "{{ 'now' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' }}",
            "sku": {{ variant.sku | default: variant.id | json }},
            {% if variant.barcode != blank %}
            "gtin": {{ variant.barcode | json }},
            {% endif %}
            "availability": {% if variant.available %}"https://schema.org/InStock"{% else %}"https://schema.org/OutOfStock"{% endif %},
            "seller": {
              "@id": "https://saturaise.com/#organization"
            },
            "url": "{{ shop.url }}{{ product.url }}?variant={{ variant.id }}",
            "itemCondition": "https://schema.org/NewCondition",
            
            {% comment %} Size-specific property {% endcomment %}
            {% if variant.title != 'Default Title' %}
            "additionalProperty": {
              "@type": "PropertyValue",
              "name": "Rozmiar",
              "value": {{ variant.title | json }}
            },
            {% endif %}
            
            {% comment %} Polish Market Shipping Details {% endcomment %}
            "shippingDetails": {
              "@type": "OfferShippingDetails",
              "shippingRate": {
                "@type": "MonetaryAmount",
                "value": "0.00",
                "currency": "PLN"
              },
              "deliveryTime": {
                "@type": "ShippingDeliveryTime",
                "handlingTime": "P1D",
                "transitTime": "P2D"
              },
              "shippingDestination": {
                "@type": "DefinedRegion",
                "addressCountry": "PL"
              },
              "shippingLabel": "Darmowa wysyłka w Polsce"
            },
            
            {% comment %} Return Policy {% endcomment %}
            "hasMerchantReturnPolicy": {
              "@type": "MerchantReturnPolicy",
              "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow", 
              "merchantReturnDays": 14,
              "returnMethod": "https://schema.org/ReturnByMail",
              "returnFees": "https://schema.org/FreeReturn"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }{% else %}{
        "@type": "Offer",
        "price": "{{ product.price | money_without_currency | remove: ',' | replace: ',', '.' }}",
        "priceCurrency": "PLN",
        "priceValidUntil": "{{ 'now' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' }}",
        "availability": "https://schema.org/InStock",
        "seller": {
          "@id": "https://saturaise.com/#organization"
        },
        "url": "{{ shop.url }}{{ product.url }}",
        "itemCondition": "https://schema.org/NewCondition",
        "shippingDetails": {
          "@type": "OfferShippingDetails",
          "shippingRate": {
            "@type": "MonetaryAmount",
            "value": "0.00", 
            "currency": "PLN"
          },
          "deliveryTime": {
            "@type": "ShippingDeliveryTime",
            "handlingTime": "P1D",
            "transitTime": "P2D"
          },
          "shippingDestination": {
            "@type": "DefinedRegion",
            "addressCountry": "PL"
          }
        },
        "hasMerchantReturnPolicy": {
          "@type": "MerchantReturnPolicy",
          "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
          "merchantReturnDays": 14,
          "returnMethod": "https://schema.org/ReturnByMail", 
          "returnFees": "https://schema.org/FreeReturn"
        }
      }{% endif %}
      {% else %}
      "offers": {
        "@type": "Offer",
        "price": "{{ product.price | money_without_currency | remove: ',' | replace: ',', '.' }}",
        "priceCurrency": "PLN", 
        "availability": "https://schema.org/OutOfStock",
        "seller": {
          "@id": "https://saturaise.com/#organization"
        },
        "url": "{{ shop.url }}{{ product.url }}",
        "itemCondition": "https://schema.org/NewCondition"
      }
      {% endif %},
      
      {% comment %} FIXED: Added comma before warranty section {% endcomment %}
      "isPartOf": {
        "@id": "https://saturaise.com/#website"
      },
      
      {% comment %} Warranty Promise for Authenticity {% endcomment %}
      "warranty": {
        "@type": "WarrantyPromise",
        "durationOfWarranty": "P30D",
        "warrantyScope": "Gwarancja autentyczności i ochrona kupującego"
      },
      
      {% comment %} Reviews Integration (if available) {% endcomment %}
      {% if product.metafields.reviews.rating %}
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "{{ product.metafields.reviews.rating.value }}",
        "reviewCount": "{{ product.metafields.reviews.rating_count.value }}",
        "bestRating": "5",
        "worstRating": "1"
      },
      {% endif %}
      
      {% comment %} Audience for Sneakers {% endcomment %}
      "audience": {
        "@type": "PeopleAudience",
        "suggestedMinAge": 16,
        "audienceType": "Miłośnicy sneakersów, kolekcjonerzy, osoby świadome mody"
      },
      
      {% comment %} Enhanced Material Information {% endcomment %}
      {% assign detected_material = "" %}
      {% assign title_lower = product.title | downcase %}
      {% assign desc_lower = product.description | downcase | strip_html %}
      
      {% if desc_lower contains 'leather' or title_lower contains 'leather' or desc_lower contains 'skóra' %}
        {% assign detected_material = "Skóra" %}
      {% elsif desc_lower contains 'suede' or title_lower contains 'suede' or desc_lower contains 'zamsz' %}
        {% assign detected_material = "Zamsz" %}
