<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {% comment %} Organization Schema - ZAWSZE obecny {% endcomment %}
    {
      "@type": "Organization",
      "@id": "https://saturaise.com/#organization",
      "name": "Saturaise",
      "alternateName": "Saturaise Sneakers",
      "url": "https://saturaise.com",
      "logo": {
        "@type": "ImageObject",
        "url": "https://saturaise.com/cdn/shop/files/logo-new-saturaise2.png",
        "width": 600,
        "height": 60
      },
      "image": "https://saturaise.com/cdn/shop/files/logo-new-saturaise2.png",
      "description": "Saturaise to działająca od trzech lat firma specjalizująca się w sprzedaży najbardziej pożądanych na rynku butów oraz ubrań z gwarancją autentyczności każdego przedmiotu.",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Ogrodowa 9a",
        "addressLocality": "Żyrowa",
        "postalCode": "47-330",
        "addressCountry": "PL"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+48451108247",
        "email": "saturaisekontakt@gmail.com",
        "contactType": "customer service",
        "availableLanguage": "Polish",
        "hoursAvailable": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "16:00"
        }
      },
      "foundingDate": "2022",
      "areaServed": "PL",
      {% comment %} FIXED: Proper sameAs logic without double commas {% endcomment %}
"sameAs": [
  "https://saturaise.com",
  "https://www.facebook.com/people/Saturaisecom/61576843476406/",
  "https://www.instagram.com/saturaise_com/",
  "https://www.tiktok.com/@saturaise.com"
]
    },
    
    {% comment %} WebSite Schema - ZAWSZE obecny {% endcomment %}
    {
      "@type": "WebSite",
      "@id": "https://saturaise.com/#website",
      "url": "https://saturaise.com",
      "name": "Saturaise",
      "description": "Limitowane sneakersy Nike, Adidas, Jordan - oryginalne buty i kolekcjonerskie figurki",
      "publisher": {
        "@id": "https://saturaise.com/#organization"
      },
      "inLanguage": "pl-PL",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://saturaise.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    
    {% comment %} SEARCH PAGE SCHEMA {% endcomment %}
    {% if template contains 'search' %}
    ,{
      "@type": "SearchResultsPage",
      "@id": "{{ shop.url }}/search?q={{ search.terms | url_encode }}#searchresultspage",
      "url": "{{ shop.url }}/search?q={{ search.terms | url_encode }}",
      "name": "Wyniki wyszukiwania: {{ search.terms }} | Saturaise",
      "description": "Znaleziono {{ search.results_count }} {% if search.results_count == 1 %}wynik{% elsif search.results_count < 5 %}wyniki{% else %}wyników{% endif %} dla \"{{ search.terms }}\" w sklepie Saturaise",
      "isPartOf": {
        "@id": "https://saturaise.com/#website"
      }{% if search.results_count > 0 %},
      "mainEntity": {
        "@type": "ItemList",
        "numberOfItems": {{ search.results_count }},
        "itemListElement": [
          {% assign result_count = 0 %}
          {% for item in search.results limit: 20 %}
            {% if item.object_type == 'product' %}
              {% assign result_count = result_count | plus: 1 %}
              {
                "@type": "ListItem",
                "position": {{ result_count }},
                "item": {
                  "@type": "Product",
                  "@id": "{{ shop.url }}{{ item.url }}#product",
                  "name": {{ item.title | json }},
                  "url": "{{ shop.url }}{{ item.url }}",
                  {% if item.featured_image %}
                  "image": "{{ item.featured_image | image_url: width: 800 }}",
                  {% endif %}
                  "description": {% if item.description != blank %}{{ item.description | strip_html | truncatewords: 50 | json }}{% else %}{{ item.title | json }}{% endif %},
                  {% if item.vendor != blank %}
                  "brand": {
                    "@type": "Brand",
                    "name": {{ item.vendor | json }}
                  },
                  {% endif %}
                  "sku": {{ item.selected_or_first_available_variant.sku | default: item.selected_or_first_available_variant.id | json }},
                  {% if item.available %}
                  "offers": {
                    "@type": "{% if item.variants.size > 1 %}AggregateOffer{% else %}Offer{% endif %}",
                    "priceCurrency": "{{ shop.currency }}",
                    {% if item.variants.size > 1 %}
                    "lowPrice": "{{ item.price_min | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    "highPrice": "{{ item.price_max | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    "offerCount": {{ item.variants.size }},
                    {% else %}
                    "price": "{{ item.price | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    {% endif %}
                    "availability": "https://schema.org/InStock",
                    "seller": {
                      "@id": "https://saturaise.com/#organization"
                    },
                    "url": "{{ shop.url }}{{ item.url }}",
                    "priceValidUntil": "{{ 'now' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' }}"
                  }
                  {% else %}
                  "offers": {
                    "@type": "Offer",
                    "priceCurrency": "{{ shop.currency }}",
                    "price": "{{ item.price | money_without_currency | remove: ',' | replace: ',', '.' }}",
                    "availability": "https://schema.org/OutOfStock",
                    "seller": {
                      "@id": "https://saturaise.com/#organization"
                    },
                    "url": "{{ shop.url }}{{ item.url }}"
                  }
                  {% endif %}
                }
              }{% unless forloop.last %},{% endunless %}
            {% endif %}
          {% endfor %}
        ]
      }{% endif %},
      "query": {{ search.terms | json }}
    }
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}/search?q={{ search.terms | url_encode }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://saturaise.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Wyszukiwanie: {{ search.terms }}",
          "item": "{{ shop.url }}/search?q={{ search.terms | url_encode }}"
        }
      ]
    }
    {% endif %}
    
    {% comment %} BLOG SCHEMA {% endcomment %}
    {% if template contains 'blog' and blog %}
    ,{
      "@type": "Blog",
      "@id": "{{ shop.url }}{{ blog.url }}#blog",
      "url": "{{ shop.url }}{{ blog.url }}",
      "name": {{ blog.title | json }},
      "description": {% if blog.summary != blank %}{{ blog.summary | strip_html | json }}{% else %}"{{ blog.title }} - aktualności ze świata sneakersów"{% endif %},
      "inLanguage": "pl-PL",
      "isPartOf": {
        "@id": "https://saturaise.com/#website"
      },
      "publisher": {
        "@id": "https://saturaise.com/#organization"
      }{% if blog.tags.size > 0 %},
      "keywords": {{ blog.tags | join: ', ' | json }}{% endif %}{% if blog.articles.size > 0 %},
      "blogPost": [
        {% for article in blog.articles limit: 10 %}
        {
          "@type": "BlogPosting",
          "@id": "{{ shop.url }}{{ article.url }}#blogposting",
          "headline": {{ article.title | strip_html | json }},
          "description": {% if article.summary != blank %}{{ article.summary | strip_html | json }}{% else %}{{ article.excerpt_or_content | strip_html | truncatewords: 30 | json }}{% endif %},
          "url": "{{ shop.url }}{{ article.url }}",
          "datePublished": "{{ article.created_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
          "dateModified": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
          {% if article.image %}
          "image": {
            "@type": "ImageObject",
            "url": "{{ article.image | image_url: width: 1200 }}",
            "width": 1200,
            "height": 630
          },
          {% endif %}
          "author": {
            "@type": "Person",
            "name": {% if article.author != blank %}{{ article.author | json }}{% else %}"Saturaise"{% endif %}
          },
          "publisher": {
            "@id": "https://saturaise.com/#organization"
          }{% if article.tags.size > 0 %},
          "keywords": {{ article.tags | join: ', ' | json }}{% endif %},
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ article.url }}"
          },
          "isPartOf": {
            "@id": "{{ shop.url }}{{ blog.url }}#blog"
          }
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]{% endif %}
    }
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}{{ blog.url }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://saturaise.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": "{{ shop.url }}{{ blog.url }}"
        }
      ]
    }
    {% endif %}
    
    {% comment %} ARTICLE SCHEMA {% endcomment %}
    {% if template contains 'article' %}
    ,{
      "@type": "BlogPosting",
      "@id": "{{ shop.url }}{{ article.url }}#blogposting",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ shop.url }}{{ article.url }}"
      },
      "headline": {{ article.title | strip_html | json }},
      "description": {% if article.summary != blank %}{{ article.summary | strip_html | json }}{% else %}{{ article.excerpt_or_content | strip_html | truncatewords: 30 | json }}{% endif %},
      "datePublished": "{{ article.created_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
      "dateModified": "{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}",
      "author": {
        "@type": "Person",
        "name": {% if article.author != blank %}{{ article.author | json }}{% else %}"Saturaise"{% endif %}
      },
      {% if article.image %}
      "image": {
        "@type": "ImageObject",
        "url": "{{ article.image | image_url: width: 1200 }}",
        "width": 1200,
        "height": 630
      },
      {% endif %}
      {% if article.tags.size > 0 %}
      "keywords": {{ article.tags | join: ', ' | json }},
      {% endif %}
      "publisher": {
        "@id": "https://saturaise.com/#organization"
      },
      "isPartOf": {
        "@id": "{{ shop.url }}{{ blog.url }}#blog"
      }
    }
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}{{ article.url }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://saturaise.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": "{{ shop.url }}{{ blog.url }}"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": {{ article.title | json }},
          "item": "{{ shop.url }}{{ article.url }}"
        }
      ]
    }
    {% endif %}
    
    {% if template contains 'product' %}
    ,{
      "@type": "BreadcrumbList",
      "@id": "{{ shop.url }}{{ product.url }}#breadcrumblist",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "{{ shop.url }}"
        }
        {% if collection.url %}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ collection.title | json }},
          "item": "{{ shop.url }}{{ collection.url }}"
        }
        ,{
          "@type": "ListItem",
          "position": 3,
          "name": {{ product.title | json }},
          "item": "{{ shop.url }}{{ product.url }}"
        }
        {% else %}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ product.title | json }},
          "item": "{{ shop.url }}{{ product.url }}"
        }
        {% endif %}
      ]
    }
    ,{
      "@type": "Product",
      "@id": "{{ shop.url }}{{ product.url }}#product",
      "url": "{{ shop.url }}{{ product.url }}",
      "name": {{ product.title | strip_html | json }},
      "description": {% if product.description != blank %}{{ product.description | strip_html | truncatewords: 155 | json }}{% else %}{{ product.title | json }}{% endif %},
      {% if product.images.size > 0 %}
      "image": [
        {% for image in product.images limit: 10 %}
        "{{ image | image_url: width: 1200 }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      {% endif %}
      {% assign product_brand = product.metafields.custom.brand.value | default: product.vendor %}
      {% if product_brand != blank %}
      "brand": {
        "@type": "Brand",
        "name": {{ product_brand | json }}
      },
      "manufacturer": {
        "@type": "Organization", 
        "name": {{ product_brand | json }}
      },
      {% endif %}
      "category": {% if product.type != blank %}{{ product.type | json }}{% else %}"Sneakersy"{% endif %},
      "productID": {{ product.id | json }},
      "sku": {{ product.selected_or_first_available_variant.sku | default: product.selected_or_first_available_variant.id | json }},
      {% if product.selected_or_first_available_variant.barcode != blank %}
        {% assign barcode_length = product.selected_or_first_available_variant.barcode | size %}
        {% if barcode_length == 12 %}
      "gtin12": {{ product.selected_or_first_available_variant.barcode | json }},
        {% elsif barcode_length == 13 %}
      "gtin13": {{ product.selected_or_first_available_variant.barcode | json }},
        {% elsif barcode_length == 14 %}
      "gtin14": {{ product.selected_or_first_available_variant.barcode | json }},
        {% else %}
      "gtin": {{ product.selected_or_first_available_variant.barcode | json }},
        {% endif %}
      {% endif %}
      {% if product.metafields.mm-google-shopping.mpn %}
      "mpn": {{ product.metafields.mm-google-shopping.mpn.value | json }},
      {% endif %}
      {% if product.metafields.custom.color %}
      "color": {% if product.metafields.custom.color.value.label %}{{ product.metafields.custom.color.value.label | json }}{% else %}{{ product.metafields.custom.color.value | json }}{% endif %},
      {% elsif product.metafields.shopify.color-pattern %}
      "color": {% if product.metafields.shopify.color-pattern.value.label %}{{ product.metafields.shopify.color-pattern.value.label | json }}{% else %}{{ product.metafields.shopify.color-pattern.value | json }}{% endif %},
      {% endif %}
      {% if product.metafields.shopify.footwear-material %}
        {% if product.metafields.shopify.footwear-material.value.first.label %}
          {% assign materials = "" %}
          {% for material in product.metafields.shopify.footwear-material.value %}
            {% if material.label %}
              {% assign materials = materials | append: material.label %}
              {% unless forloop.last %}{% assign materials = materials | append: ", " %}{% endunless %}
            {% endif %}
          {% endfor %}
      "material": {{ materials | json }},
        {% endif %}
      {% endif %}
      {% comment %} FIXED: Size extraction - convert objects to clean string {% endcomment %}
      {% if product.metafields.custom.size_system %}
      "size": {{ product.metafields.custom.size_system.value | json }},
      {% elsif product.metafields.mm-google-shopping.size_system %}
      "size": {{ product.metafields.mm-google-shopping.size_system.value | json }},
      {% elsif product.metafields.shopify.shoe-size %}
        {% if product.metafields.shopify.shoe-size.value.first.label %}
          {% assign sizes = "" %}
          {% for size in product.metafields.shopify.shoe-size.value %}
            {% if size.label %}
              {% assign sizes = sizes | append: size.label %}
              {% unless forloop.last %}{% assign sizes = sizes | append: ", " %}{% endunless %}
            {% endif %}
          {% endfor %}
      "size": {{ sizes | json }},
        {% elsif product.metafields.shopify.shoe-size.value.label %}
      "size": {{ product.metafields.shopify.shoe-size.value.label | json }},
        {% endif %}
      {% elsif product.metafields.shopify.size %}
        {% if product.metafields.shopify.size.value.first.label %}
          {% assign sizes = "" %}
          {% for size in product.metafields.shopify.size.value %}
            {% if size.label %}
              {% assign sizes = sizes | append: size.label %}
              {% unless forloop.last %}{% assign sizes = sizes | append: ", " %}{% endunless %}
            {% endif %}
          {% endfor %}
      "size": {{ sizes | json }},
        {% elsif product.metafields.shopify.size.value.label %}
      "size": {{ product.metafields.shopify.size.value.label | json }},
        {% endif %}
      {% endif %}
      {% if product.metafields.custom.release_date %}
      "releaseDate": "{{ product.metafields.custom.release_date.value | date: '%Y-%m-%d' }}",
      {% endif %}
      {% if product.metafields.mm-google-shopping.size_type %}
      "sizeSystem": {{ product.metafields.mm-google-shopping.size_type.value | json }},
      {% endif %}
      {% if product.metafields.mm-google-shopping.condition %}
        {% assign condition = product.metafields.mm-google-shopping.condition.value %}
        {% if condition == "new" %}
      "itemCondition": "https://schema.org/NewCondition",
        {% elsif condition == "used" %}
      "itemCondition": "https://schema.org/UsedCondition",
        {% elsif condition == "refurbished" %}
      "itemCondition": "https://schema.org/RefurbishedCondition",
        {% else %}
      "itemCondition": "https://schema.org/NewCondition",
        {% endif %}
      {% else %}
      "itemCondition": "https://schema.org/NewCondition",
      {% endif %}
      "audience": {
        "@type": "PeopleAudience",
        {% if product.metafields.mm-google-shopping.gender %}
        "suggestedGender": {% assign gender = product.metafields.mm-google-shopping.gender.value %}{% if gender == "male" %}"https://schema.org/Male"{% elsif gender == "female" %}"https://schema.org/Female"{% else %}"https://schema.org/Unisex"{% endif %},
        {% elsif product.metafields.shopify.target-gender %}
        "suggestedGender": {% assign gender = product.metafields.shopify.target-gender.value %}{% if gender contains "male" or gender contains "męski" %}"https://schema.org/Male"{% elsif gender contains "female" or gender contains "damski" %}"https://schema.org/Female"{% else %}"https://schema.org/Unisex"{% endif %},
        {% endif %}
        {% if product.metafields.mm-google-shopping.age_group %}
        {% assign age_group = product.metafields.mm-google-shopping.age_group.value %}
        {% if age_group == "kids" %}
        "suggestedMinAge": 3,
        "suggestedMaxAge": 12
        {% elsif age_group == "toddler" %}
        "suggestedMinAge": 1,
        "suggestedMaxAge": 4
        {% elsif age_group == "infant" %}
        "suggestedMinAge": 0,
        "suggestedMaxAge": 2
        {% else %}
        "suggestedMinAge": 16
        {% endif %}
        {% elsif product.metafields.shopify.age-group %}
        {% assign age_group = product.metafields.shopify.age-group.value %}
        {% if age_group contains "kids" or age_group contains "dzieci" %}
        "suggestedMinAge": 3,
        "suggestedMaxAge": 12
        {% else %}
        "suggestedMinAge": 16
        {% endif %}
        {% else %}
        "suggestedMinAge": 16
        {% endif %}
      },
      "additionalProperty": [
        {% assign properties_added = false %}
        {% if product.metafields.custom.release_date %}
        {
          "@type": "PropertyValue",
          "name": "Data premiery",
          "value": "{{ product.metafields.custom.release_date.value | date: '%Y-%m-%d' }}"
        }{% assign properties_added = true %}
        {% endif %}
        {% comment %} FIXED: Activity - Extract clean string values {% endcomment %}
        {% if product.metafields.shopify.activity %}
        {% if properties_added %},{% endif %}
        {
          "@type": "PropertyValue",
          "name": "Aktywność",
          "value": {% if product.metafields.shopify.activity.value.first.label %}{% assign activities = "" %}{% for activity in product.metafields.shopify.activity.value %}{% if activity.label %}{% assign activities = activities | append: activity.label %}{% unless forloop.last %}{% assign activities = activities | append: ", " %}{% endunless %}{% endif %}{% endfor %}{{ activities | json }}{% else %}{{ product.metafields.shopify.activity.value | json }}{% endif %}
        }{% assign properties_added = true %}
        {% endif %}
        {% comment %} FIXED: Shoe Features - Extract clean string values {% endcomment %}
        {% if product.metafields.shopify.shoe-features %}
        {% if properties_added %},{% endif %}
        {
          "@type": "PropertyValue",
          "name": "Cechy obuwia",
          "value": {% if product.metafields.shopify.shoe-features.value.first.label %}{% assign features = "" %}{% for feature in product.metafields.shopify.shoe-features.value %}{% if feature.label %}{% assign features = features | append: feature.label %}{% unless forloop.last %}{% assign features = features | append: ", " %}{% endunless %}{% endif %}{% endfor %}{{ features | json }}{% else %}{{ product.metafields.shopify.shoe-features.value | json }}{% endif %}
        }{% assign properties_added = true %}
        {% endif %}
        {% comment %} FIXED: Sneaker Style - Extract clean string values {% endcomment %}
        {% if product.metafields.shopify.sneaker-style %}
        {% if properties_added %},{% endif %}
        {
          "@type": "PropertyValue",
          "name": "Styl sneakersów",
          "value": {% if product.metafields.shopify.sneaker-style.value.first.label %}{% assign styles = "" %}{% for style in product.metafields.shopify.sneaker-style.value %}{% if style.label %}{% assign styles = styles | append: style.label %}{% unless forloop.last %}{% assign styles = styles | append: ", " %}{% endunless %}{% endif %}{% endfor %}{{ styles | json }}{% else %}{{ product.metafields.shopify.sneaker-style.value | json }}{% endif %}
        }{% assign properties_added = true %}
        {% endif %}
        {% comment %} FIXED: Closure Type - Extract clean string values {% endcomment %}
        {% if product.metafields.shopify.closure-type %}
        {% if properties_added %},{% endif %}
        {
          "@type": "PropertyValue",
          "name": "Typ zapięcia",
          "value": {% if product.metafields.shopify.closure-type.value.first.label %}{% assign closures = "" %}{% for closure in product.metafields.shopify.closure-type.value %}{% if closure.label %}{% assign closures = closures | append: closure.label %}{% unless forloop.last %}{% assign closures = closures | append: ", " %}{% endunless %}{% endif %}{% endfor %}{{ closures | json }}{% else %}{{ product.metafields.shopify.closure-type.value | json }}{% endif %}
        }{% assign properties_added = true %}
        {% endif %}
        {% if product.metafields.shopify.shoe-fit %}
        {% if properties_added %},{% endif %}
        {
          "@type": "PropertyValue",
          "name": "Dopasowanie",
          "value": {% if product.metafields.shopify.shoe-fit.value.label %}{{ product.metafields.shopify.shoe-fit.value.label | json }}{% else %}{{ product.metafields.shopify.shoe-fit.value | json }}{% endif %}
