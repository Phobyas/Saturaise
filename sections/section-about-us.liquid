{% comment %} About Us Section for Index Page - Styled to Match New About Us Page {% endcomment %}

<style>
/* About Us Section - Index Page - Professional Blue Theme */
.about-us-index-section {
  background: white;
  padding: 80px 0;
  position: relative;
}

.about-us-index-container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0;
}

@media (max-width: 767px) {
  .about-us-index-container {
    padding: 0 12px;
  }
}

@media (min-width: 1920px) {
  .about-us-index-container {
    max-width: 1600px;
  }
}

/* Main Grid Layout */
.about-us-index-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0;
  align-items: stretch;
  min-height: 500px;
}

@media (max-width: 1024px) {
  .about-us-index-grid {
    grid-template-columns: 1fr;
    gap: 40px;
    text-align: center;
    min-height: auto;
  }
}

/* Text Content */
.about-us-index-content {
  order: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 60px 60px 60px 0;
}

.about-us-index-content h2 {

  font-size: 32px;
}

@media (max-width: 1024px) {
  .about-us-index-content {
    order: 2;
    padding: 40px 0;
  }
}

@media (max-width: 767px) {
  .about-us-index-content {
    padding: 30px 0;
    font-size: 24px;
  }
}

.about-us-index-content h2 {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24px;
  line-height: 1.2;
}

.about-us-index-content .prose {
  font-size: 1.125rem;
  line-height: 1.6;
  color: #475569;
  margin-bottom: 32px;
}

.about-us-index-content .prose p {
  margin-bottom: 16px;
  font-size: 16px;
}

/* Responsive heading sizes */
@media (max-width: 767px) {
  .about-us-index-content h2 {
    font-size: 2rem;
  }
  
  .about-us-index-content .prose {
    font-size: 1rem;
  }
}

/* Custom font size overrides */
{% case section.settings.heading_size %}
  {% when 'small' %}
    .about-us-index-content h2 {
      font-size: 1.875rem !important;
    }
    @media (min-width: 768px) {
      .about-us-index-content h2 {
        font-size: 2.25rem !important;
      }
    }
  {% when 'medium' %}
    .about-us-index-content h2 {
      font-size: 2.25rem !important;
    }
    @media (min-width: 768px) {
      .about-us-index-content h2 {
        font-size: 2.5rem !important;
      }
    }
  {% when 'large' %}
    .about-us-index-content h2 {
      font-size: 2.5rem !important;
    }
    @media (min-width: 768px) {
      .about-us-index-content h2 {
        font-size: 3rem !important;
      }
    }
{% endcase %}

{% case section.settings.content_size %}
  {% when 'small' %}
    .about-us-index-content .prose {
      font-size: 0.875rem !important;
    }
  {% when 'medium' %}
    .about-us-index-content .prose {
      font-size: 1rem !important;
    }
  {% when 'large' %}
    .about-us-index-content .prose {
      font-size: 1.125rem !important;
    }
  {% when 'xlarge' %}
    .about-us-index-content .prose {
      font-size: 1.25rem !important;
    }
{% endcase %}

/* Image Section */
.about-us-index-image {
  order: 2;
  background: #eeeeee;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px;
  border-radius: 12px;
}

@media (max-width: 1024px) {
  .about-us-index-image {
    order: 1;
    padding: 40px;
    min-height: 300px;
  }
}

@media (max-width: 767px) {
  .about-us-index-image {
    padding: 30px;
    min-height: 250px;
  }
}

.about-us-index-image-container {
  position: relative;
  max-width: 350px;
  width: 100%;
}

.about-us-index-image-container img {
  width: 100%;
  height: auto;
  object-fit: contain;
  display: block;
}

/* CTA Button */
.about-us-cta-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: #2563eb;
  color: white !important;
  padding: 14px 28px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 600;
  font-size: 15px;
  transition: all 0.3s ease;
  letter-spacing: 0.025em;
  box-shadow: 0 2px 8px rgba(37, 99, 235, 0.15);
}

.about-us-cta-button:hover {
  background: #1d4ed8;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.25);
  color: white;
  text-decoration: none;
}

@media (max-width: 767px) {
  .about-us-cta-button {
    padding: 12px 20px;
    font-size: 14px;
  }
}

/* Quick Stats */
.about-us-quick-stats {
  display: flex;
  gap: 24px;
  margin: 32px 0;
  flex-wrap: wrap;
}

@media (max-width: 767px) {
  .about-us-quick-stats {
    justify-content: center;
    gap: 16px;
  }
}

.quick-stat-item {
  text-align: center;
  padding: 12px 16px;
  background: #f8fafc;
  border-radius: 6px;
  border: 1px solid #e2e8f0;
  min-width: 100px;
  transition: border-color 0.3s ease;
}

.quick-stat-item:hover {
  border-color: #2563eb;
}

.quick-stat-number {
  display: block;
  font-size: 20px;
  font-weight: 700;
  color: #2563eb;
  margin-bottom: 2px;
}

.quick-stat-label {
  font-size: 11px;
  color: #64748b;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
}

/* Section Padding */
{% if section.settings.section_padding contains 'both' %}
  .about-us-index-section {
    padding: 80px 0;
  }
{% elsif section.settings.section_padding contains 'top' %}
  .about-us-index-section {
    padding-top: 80px;
    padding-bottom: 0;
  }
{% elsif section.settings.section_padding contains 'bottom' %}
  .about-us-index-section {
    padding-top: 0;
    padding-bottom: 80px;
  }
{% elsif section.settings.section_padding == 'none' %}
  .about-us-index-section {
    padding: 40px 0;
  }
{% endif %}

@media (max-width: 767px) {
  .about-us-index-section {
    padding: 60px 0;
  }
  
  {% if section.settings.section_padding == 'none' %}
    .about-us-index-section {
      padding: 20px 0;
    }
  {% endif %}
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .about-us-index-container {
    padding: 0 12px;
  }
}
</style>

<section class="about-us-index-section" data-section-id="{{ section.id }}" data-section-type="about-us-index">
  <div class="about-us-index-container">
    <div class="about-us-index-grid">
      
      <!-- Text Content -->
      <div class="about-us-index-content">
        {%- if section.settings.heading != blank -%}
          <h2>{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.content != blank -%}
          <div class="prose">
            {{ section.settings.content }}
          </div>
        {%- endif -%}

        <!-- Quick Stats -->
        <div class="about-us-quick-stats">
          <div class="quick-stat-item">
            <span class="quick-stat-number">3+</span>
            <span class="quick-stat-label">Lata</span>
          </div>
          <div class="quick-stat-item">
            <span class="quick-stat-number">100%</span>
            <span class="quick-stat-label">Oryginalne</span>
          </div>
          <div class="quick-stat-item">
            <span class="quick-stat-number">1000+</span>
            <span class="quick-stat-label">Klientów</span>
          </div>
        </div>

        <!-- CTA Button -->
        <a href="{{ section.settings.cta_link | default: '/pages/o-nas' }}" class="about-us-cta-button">
          {{ section.settings.cta_text | default: "Poznaj naszą historię" }}
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
          </svg>
        </a>
      </div>

      <!-- Image Section -->
      {%- if section.settings.logo -%}
        <div class="about-us-index-image">
          <div class="about-us-index-image-container">
            {{ section.settings.logo | image_url: width: 600 | image_tag: 
              class: 'w-full h-auto',
              loading: 'lazy',
              alt: section.settings.heading | default: shop.name
            }}
          </div>
        </div>
      {%- endif -%}

    </div>
  </div>
</section>

