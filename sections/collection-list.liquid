<script>
document.addEventListener('DOMContentLoaded', function() {
  var sectionId = '{{ section.id }}';
  var swiper;
  var prevBtn = document.getElementById('collectionPrev-' + sectionId);
  var nextBtn = document.getElementById('collectionNext-' + sectionId);
  
  function updateArrowState() {
    if (!swiper || !prevBtn || !nextBtn) return;
    
    // Disable previous button when at the beginning
    prevBtn.disabled = swiper.isBeginning;
    
    // Disable next button when at the end
    nextBtn.disabled = swiper.isEnd;
    
    console.log('Arrow state updated - isBeginning:', swiper.isBeginning, 'isEnd:', swiper.isEnd);
  }

  function isSwiperLoaded() {
    return typeof Swiper !== 'undefined';
  }

  function initializeSwiper() {
    if (!isSwiperLoaded()) {
      console.error('Swiper is not loaded. Loading Swiper library...');
      loadSwiper();
      return;
    }

    // Destroy existing swiper if it exists
    if (swiper) {
      swiper.destroy(true, true);
    }

    // Find the swiper container for this specific section
    var swiperContainer = document.querySelector('[data-section-id="' + sectionId + '"] .swiper-collection-carousel');
    if (!swiperContainer) return;

    swiper = new Swiper(swiperContainer, {
      slidesPerView: 1.2,
      spaceBetween: 16,
      loop: false, // Disable loop for proper start/end detection
      grabCursor: true,
      centeredSlides: false,
      // Remove automatic navigation
      navigation: false,
      pagination: {
        el: swiperContainer.querySelector('.swiper-pagination'),
        clickable: true,
        dynamicBullets: true,
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 26,
          pagination: false,
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 26,
          pagination: false,
        },
        1280: {
          slidesPerView: {{ section.settings.items_per_row }},
          spaceBetween: 26,
          pagination: false,
        },
      },
      speed: 300,
      touchRatio: 1,
      touchAngle: 45,
      simulateTouch: true,
      allowTouchMove: true,
      on: {
        init: function() {
          updateArrowState();
        },
        slideChange: function() {
          updateArrowState();
        },
        slideChangeTransitionEnd: function() {
          updateArrowState();
        },
        resize: function() {
          updateArrowState();
        },
        reachBeginning: function() {
          updateArrowState();
        },
        reachEnd: function() {
          updateArrowState();
        }
      }
    });

    // Manual button event handlers - PRECISE SLIDE CONTROL
    if (prevBtn) {
      // Remove any existing event listeners first
      var newPrevBtn = prevBtn.cloneNode(true);
      prevBtn.parentNode.replaceChild(newPrevBtn, prevBtn);
      prevBtn = newPrevBtn;
      
      prevBtn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        if (!prevBtn.disabled && swiper) {
          console.log('Previous button clicked - current index:', swiper.realIndex);
          
          // Get current real index and calculate previous
          var currentIndex = swiper.realIndex;
          var totalSlides = swiper.slides.filter(slide => !slide.classList.contains('swiper-slide-duplicate')).length;
          var prevIndex = currentIndex === 0 ? totalSlides - 1 : currentIndex - 1;
          
          // Use slideToLoop for precise control
          swiper.slideToLoop(prevIndex, 300);
          
          setTimeout(updateArrowState, 50);
        }
      });
    }

    if (nextBtn) {
      // Remove any existing event listeners first
      var newNextBtn = nextBtn.cloneNode(true);
      nextBtn.parentNode.replaceChild(newNextBtn, nextBtn);
      nextBtn = newNextBtn;
      
      nextBtn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        if (!nextBtn.disabled && swiper) {
          console.log('Next button clicked - current index:', swiper.realIndex);
          
          // Get current real index and calculate next
          var currentIndex = swiper.realIndex;
          var totalSlides = swiper.slides.filter(slide => !slide.classList.contains('swiper-slide-duplicate')).length;
          var nextIndex = currentIndex === totalSlides - 1 ? 0 : currentIndex + 1;
          
          // Use slideToLoop for precise control
          swiper.slideToLoop(nextIndex, 300);
          
          setTimeout(updateArrowState, 50);
        }
      });
    }

    // Initial button state
    setTimeout(updateArrowState, 100);
  }

  function loadSwiper() {
    if (!isSwiperLoaded()) {
      var swiperCss = document.createElement('link');
      swiperCss.rel = 'stylesheet';
      swiperCss.href = 'https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css';
      document.head.appendChild(swiperCss);

      var swiperScript = document.createElement('script');
      swiperScript.src = 'https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js';
      swiperScript.onload = function() {
        initializeSwiper();
      };
      document.head.appendChild(swiperScript);
    } else {
      initializeSwiper();
    }
  }

  if (document.readyState === 'complete') {
    loadSwiper();
  } else {
    loadSwiper();
  }

  // Handle resize with debouncing
  let resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(function() {
      if (swiper) {
        swiper.update();
        updateArrowState();
      }
    }, 250);
  }, { passive: true });
});

// Handle Shopify section reloads
document.addEventListener('shopify:section:load', function(event) {
  if (event.target.querySelector('[data-section-type="collection-carousel"]')) {
    setTimeout(function() {
      // Re-run the initialization
      if (typeof Swiper !== 'undefined') {
        var existingSwiper = event.target.querySelector('.swiper-collection-carousel');
        if (existingSwiper && existingSwiper.swiper) {
          existingSwiper.swiper.destroy(true, true);
        }
      }
      
      // Re-initialize - the script will re-run automatically
      location.reload();
    }, 100);
  }
});
</script>

