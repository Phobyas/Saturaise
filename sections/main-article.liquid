{% comment %} Clean Article Template with Semantic HTML {% endcomment %}
<section class="article-template" data-section-id="{{ section.id }}" data-section-type="article-template" data-section-loaded="false">
  
  <!-- Simple Article Header -->
  <header class="article-header">
    <h1 class="article-title" itemprop="headline">{{ article.title }}</h1>
    <div class="article-meta">
      {% if article.published_at %}
        <div class="meta-item">
          <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" itemprop="datePublished">
            {{ article.published_at | date: format: 'month_date_year' }}
          </time>
        </div>
      {% endif %}
      
      {% if article.author != blank and article.published_at %}
        <div class="meta-divider"></div>
      {% endif %}
      
      {% if article.author != blank %}
        <div class="meta-item">
          <span itemprop="author" itemscope itemtype="https://schema.org/Person">
            <span itemprop="name">{{ article.author }}</span>
          </span>
        </div>
      {% endif %}
      
      {% if article.tags.size > 0 %}
        <div class="meta-divider"></div>
        <div class="meta-item">
          <span>{{ article.tags.size }} {% if article.tags.size == 1 %}Tag{% else %}Tags{% endif %}</span>
        </div>
      {% endif %}
    </div>
  </header>

  <!-- Article Content -->
  <div class="main-container">
    <article class="article-content" itemscope itemtype="https://schema.org/Article">
      <!-- Hidden meta elements for Schema.org -->
      <meta itemprop="datePublished" content="{{ article.published_at | date: '%Y-%m-%d' }}">
      <meta itemprop="dateModified" content="{{ article.updated_at | date: '%Y-%m-%d' }}">
      <meta itemprop="author" content="{{ article.author | default: shop.name }}">
      <meta itemprop="publisher" content="{{ shop.name }}">
      <meta itemprop="url" content="{{ canonical_url }}">
      {% if article.excerpt != blank %}
        <meta itemprop="description" content="{{ article.excerpt | strip_html | escape }}">
      {% endif %}
      
      {% if article.image and section.settings.show_featured_image %}
        <img src="{{ article.image | image_url: width: 1200 }}" 
             alt="{{ article.image.alt | escape }}" 
             class="featured-image"
             loading="{{ loading }}"
             fetchpriority="{{ fetch_priority }}"
             width="1200" 
             height="600"
             itemprop="image">
      {% endif %}

      <div class="rte" itemprop="articleBody">
        {{ article.content }}
      </div>

      {% if article.tags.size > 0 %}
        <footer class="article-tags">
          <h4>Tags</h4>
          <div class="tag-list" itemprop="keywords">
            {% for tag in article.tags %}
              <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag-item" rel="tag">{{ tag }}</a>
            {% endfor %}
          </div>
        </footer>
      {% endif %}

      <div class="social-sharing">
        {% render 'snip-social-sharing',
          share_title: article.title,
          share_permalink: article.url,
          share_image: article
        %}
      </div>

      {%- if blog.previous_article or blog.next_article -%}
        <nav class="article-navigation" aria-label="Article navigation">
          {% if blog.previous_article != blank %}
            <a href="{{ blog.previous_article.url }}" class="nav-button prev" rel="prev">
              <div class="nav-text">← {{ blog.previous_article.title | truncate: 40 }}</div>
            </a>
          {% else %}
            <div></div>
          {% endif %}
          
          {% if blog.next_article != blank %}
            <a href="{{ blog.next_article.url }}" class="nav-button next" rel="next">
              <div class="nav-text">{{ blog.next_article.title | truncate: 40 }} →</div>
            </a>
          {% else %}
            <div></div>
          {% endif %}
        </nav>
      {%- endif -%}
      
      {%- if blog.comments_enabled? -%}
        <section class="comments-wrapper" id="comments">
          <meta itemprop="commentCount" content="{{ article.comments_count }}">
          {% render 'article-comments',
            blog: blog,
            article: article,
            number_of_comments: number_of_comments
           %}
        </section>
      {%- endif -%}
    </article>
  </div>
</section>

