        <button class="filter-apply-btn" onclick="FilterDrawer.close()" type="button">
          <span id="filterApplyText">{{ 'collections.filter.view_results' | t | default: 'Zobacz wyniki' }}</span>
        </button>
      </div>
    </div>
  </div>
