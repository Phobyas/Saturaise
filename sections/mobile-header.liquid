      {% if section.settings.logo != blank %}
        <a class="mobile-nav__img-logo inline-block lh0 mb0 shrink-wrap" href="{{ routes.root_url }}">
          {{ section.settings.logo | image_url: width: 500 | image_tag: 
            loading: 'eager', 
