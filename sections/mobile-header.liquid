              data-wau-slideout-pane="mobile-search"
              data-slideout-direction="top"
              aria-label="Zamknij wyszukiwanie">
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none">
          <path d="M16 2L2 16M2.00002 2L16 16" stroke="currentColor" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Search Content -->
  <div class="mobile-search-content">
    <!-- Search Suggestions (shown when input is empty) -->
    <div class="mobile-search-suggestions">
      <h4>Propozycje</h4>
      <div class="mobile-search-suggestions-list">
        <a href="/collections/nike-air-force" class="mobile-search-suggestion">Nike Air Force</a>
        <a href="/collections/air-jordan" class="mobile-search-suggestion">Air Jordan</a>
        <a href="/collections/nike-air-max" class="mobile-search-suggestion">Nike Air Max</a>
        <a href="/collections/adidas-yeezy" class="mobile-search-suggestion">Adidas Yeezy</a>
        <a href="/collections/new-balance" class="mobile-search-suggestion">New Balance</a>
        <a href="/collections/nike-dunk" class="mobile-search-suggestion">Nike Dunk</a>
        <a href="/collections/supreme" class="mobile-search-suggestion">Supreme</a>
        <a href="/collections/travis-scott" class="mobile-search-suggestion">Travis Scott</a>
        <a href="/collections/denim-tears" class="mobile-search-suggestion">Denim Tears</a>
        <a href="/collections/labubu" class="mobile-search-suggestion">Labubu</a>
        <a href="/collections/bearbrick" class="mobile-search-suggestion">Bearbrick</a>
        <a href="/collections/akcesoria" class="mobile-search-suggestion">Akcesoria</a>
      </div>
    </div>

    <!-- Loading State -->
    <div class="mobile-search-loading">
      <div class="mobile-search-spinner"></div>
      <p>Szukam...</p>
    </div>

    <!-- Empty State -->
    <div class="mobile-search-empty">
      <svg class="mobile-search-empty-icon" width="48" height="48" viewBox="0 0 24 24" fill="none">
        <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <h3>Brak wyników</h3>
      <p>Spróbuj wyszukać coś innego</p>
    </div>

    <!-- Predictive Search Results Container -->
    <div class="predictive-search" data-predictive-search style="display: none;">
      <!-- Results will be dynamically inserted here by JavaScript -->
    </div>
  </div>
</aside>
{%- endif -%}

