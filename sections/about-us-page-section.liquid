{% comment %} About Us Section for Saturaise - Professional & SEO Optimized - Blue Theme {% endcomment %}

<style>
/* About Us Section - Modern & Clean Design - Blue Theme */
.about-us-section {
  background: white;
  padding: 0;
  margin: 0;
  min-height: 100vh;
  width: 100%;
}

/* Container with consistent max-width */
.about-container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 20px;
}

@media (min-width: 1920px) {
  .about-container {
    max-width: 1600px;
  }
}

/* Hero Section */
.about-hero {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  padding: 80px 0 60px 0;
  text-align: center;
  border-bottom: 1px solid #cbd5e1;
  position: relative;
  overflow: hidden;
}

.about-hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M0,0 L100,100 M100,0 L0,100" stroke="%232563eb" stroke-width="0.1" opacity="0.05"/></svg>');
  background-size: 50px 50px;
  pointer-events: none;
}

.about-hero-content {
  position: relative;
  z-index: 2;
}

.about-hero h1 {
  font-size: 48px;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 16px;
  letter-spacing: -0.025em;
  line-height: 1.2;
}

.about-hero p {
  font-size: 20px;
  color: #475569;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

@media (max-width: 767px) {
  .about-hero {
    padding: 60px 0 40px 0;
  }
  
  .about-hero h1 {
    font-size: 32px;
    margin-bottom: 12px;
  }
  
  .about-hero p {
    font-size: 16px;
  }
}

/* Main Content Grid */
.about-content {
  padding: 60px 0;
}

.about-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: start;
  margin-bottom: 80px;
}

@media (max-width: 1024px) {
  .about-grid {
    grid-template-columns: 1fr;
    gap: 40px;
    margin-bottom: 60px;
  }
}

/* Story Section */
.about-story {
  order: 1;
}

.about-story h2 {
  font-size: 32px;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24px;
  line-height: 1.3;
}

.about-story p {
  font-size: 18px;
  line-height: 1.7;
  color: #334155;
  margin-bottom: 20px;
}

.about-story .highlight {
  background: #2563eb;
  padding: 4px 8px;
  border-radius: 4px;
  font-weight: 600;
  color: white;
}

/* Image Section */
.about-image {
  order: 2;
  position: relative;
}

.about-image-container {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(37, 99, 235, 0.15);
  transition: transform 0.3s ease;
}

.about-image-container:hover {
  transform: translateY(-8px);
  box-shadow: 0 25px 50px rgba(37, 99, 235, 0.2);
}

.about-image-container img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  object-position: center;
  display: block;
}

.about-image-overlay {
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
  background: rgba(30, 41, 59, 0.9);
  color: white;
  padding: 16px 20px;
  border-radius: 8px;
  backdrop-filter: blur(10px);
}

.about-image-overlay h3 {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
}

.about-image-overlay p {
  font-size: 14px;
  opacity: 0.9;
  margin: 0;
}

@media (max-width: 1024px) {
  .about-story {
    order: 2;
  }
  
  .about-image {
    order: 1;
  }
}

/* Values Section */
.about-values {
  background: #f8fafc;
  border-radius: 16px;
  padding: 60px 40px;
  margin-bottom: 80px;
  border: 1px solid #e2e8f0;
}

.about-values h2 {
  text-align: center;
  font-size: 32px;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 48px;
}

.values-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 32px;
}

.value-item {
  text-align: center;
  padding: 24px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid #e2e8f0;
}

.value-item:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(37, 99, 235, 0.15);
  border-color: #3b82f6;
}

.value-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto 20px auto;
  background: #2563eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: white;
}

.value-item h3 {
  font-size: 20px;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12px;
}

.value-item p {
  font-size: 14px;
  color: #475569;
  line-height: 1.6;
  margin: 0;
}

@media (max-width: 767px) {
  .about-values {
    padding: 40px 20px;
    margin-bottom: 60px;
  }
  
  .values-grid {
    grid-template-columns: 1fr;
    gap: 24px;
  }
}

/* Stats Section */
.about-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 32px;
  margin-bottom: 80px;
  text-align: center;
}

.stat-item {
  padding: 32px 24px;
  border-radius: 12px;
  background: #2563eb;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(37, 99, 235, 0.2);
}

.stat-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
  transition: left 0.6s ease;
}

.stat-item:hover::before {
  left: 100%;
}

.stat-item:hover {
  background: #1d4ed8;
  transform: translateY(-2px);
}

.stat-number {
  display: block;
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 8px;
  position: relative;
  z-index: 2;
  color: white;
}

.stat-label {
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
  position: relative;
  z-index: 2;
  color: white;
}

@media (max-width: 767px) {
  .about-stats {
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 60px;
  }
  
  .stat-item {
    padding: 24px 16px;
  }
  
  .stat-number {
    font-size: 28px;
  }
}

/* Team Section */
.about-team {
  text-align: center;
  margin-bottom: 80px;
}

.about-team h2 {
  font-size: 32px;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24px;
}

.about-team p {
  font-size: 18px;
  color: #475569;
  max-width: 600px;
  margin: 0 auto 48px auto;
  line-height: 1.6;
}

.team-values {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
  max-width: 800px;
  margin: 0 auto;
}

.team-value {
  padding: 24px;
  background: white;
  border: 2px solid #e2e8f0;
  border-radius: 12px;
  transition: border-color 0.3s ease, transform 0.3s ease;
}

.team-value:hover {
  border-color: #2563eb;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
}

.team-value h3 {
  font-size: 18px;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8px;
}

.team-value p {
  font-size: 14px;
  color: #475569;
  margin: 0;
  line-height: 1.5;
}

/* Contact CTA */
.about-cta {
  background: #2563eb;
  border-radius: 16px;
  padding: 60px 40px;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.about-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="%23fff" opacity="0.05"/></svg>');
  background-size: 30px 30px;
  pointer-events: none;
}

.about-cta-content {
  position: relative;
  z-index: 2;
}

.about-cta h2 {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 16px;
  color: white;
}

.about-cta p {
  font-size: 18px;
  margin-bottom: 32px;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
  color: white;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: white;
  color: #2563eb;
  padding: 16px 32px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 16px;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
}

.cta-button:hover {
  background: #f8fafc;
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(255, 255, 255, 0.3);
  color: #1d4ed8;
  text-decoration: none;
}

@media (max-width: 767px) {
  .about-cta {
    padding: 40px 20px;
  }
  
  .about-cta h2 {
    font-size: 24px;
  }
  
  .about-cta p {
    font-size: 16px;
  }
  
  .cta-button {
    padding: 14px 24px;
    font-size: 14px;
  }
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .about-container {
    padding: 0 16px;
  }
}

@media (max-width: 767px) {
  .about-container {
    padding: 0 12px;
  }
  
  .about-content {
    padding: 40px 0;
  }
  
  .about-story h2 {
    font-size: 24px;
  }
  
  .about-story p {
    font-size: 16px;
  }
  
  .about-values h2 {
    font-size: 24px;
    margin-bottom: 32px;
  }
  
  .about-team h2 {
    font-size: 24px;
  }
  
  .about-team p {
    font-size: 16px;
  }
}

/* Loading animation for images */
.about-image-container.loading {
  background: linear-gradient(90deg, #f1f5f9 25%, #e2e8f0 50%, #f1f5f9 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* Focus states for accessibility */
.cta-button:focus,
.value-item:focus,
.team-value:focus {
  outline: 2px solid #3b82f6;
  outline-offset: 2px;
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}
</style> 



<section class="about-us-section" data-section-id="{{ section.id }}" data-section-type="about-us">
  
  <!-- Hero Section -->
  <div class="about-hero">
    <div class="about-container">
      <div class="about-hero-content">
        <h1>{{ section.settings.hero_title | default: "O Saturaise" }}</h1>
        <p>{{ section.settings.hero_subtitle | default: "Twój zaufany partner w świecie autentycznych sneakersów i streetwearu" }}</p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="about-content">
    <div class="about-container">
      
      <!-- Story & Image Grid -->
      <div class="about-grid">
        <div class="about-story">
          <h2>{{ section.settings.story_title | default: "Nasza Historia" }}</h2>
          <div class="story-content">
            {% if section.settings.story_text != blank %}
              {{ section.settings.story_text }}
            {% else %}
              <p>Saturaise powstało z <span class="highlight">pasji do sneakersów</span> i potrzeby zapewnienia polskim klientom dostępu do w 100% autentycznych produktów. Od 2022 roku specjalizujemy się w sprzedaży najnowszych i najbardziej pożądanych modeli od marek takich jak Nike, Adidas, Yeezy czy Air Jordan.</p>
              
              <p>Każdy produkt w naszym sklepie przechodzi przez <span class="highlight">proces weryfikacji autentyczności</span>, zapewniający klientom pewność, że kupują oryginalne produkty. Współpracujemy z siecią zaufanych dostawców w całej Europie, co pozwala nam oferować produkty w limitowanych edycjach i trudno dostępne modele.</p>
              
              <p>Nasze doświadczenie w branży pozwala nam rozpoznawać najnowsze trendy i zapewniać klientom dostęp do najbardziej pożądanych produktów na rynku streetwearu i sneakersów.</p>
            {% endif %}
          </div>
        </div>
        
        <div class="about-image">
          <div class="about-image-container">
            {% if section.settings.story_image %}
              <img src="{{ section.settings.story_image | image_url: width: 600 }}" 
                   alt="{{ section.settings.story_image.alt | default: 'Saturaise - sklep z sneakersami' | escape }}"
                   loading="lazy"
                   width="600"
                   height="400">
            {% else %}
              <img src="{{ 'about-story-placeholder.jpg' | asset_url }}" 
                   alt="Saturaise - autentyczne sneakersy"
                   loading="lazy"
                   width="600"
                   height="400">
            {% endif %}
            {% comment %} <div class="about-image-overlay">
              <h3>{{ section.settings.image_overlay_title | default: "3+ Lata Doświadczenia" }}</h3>
              <p>{{ section.settings.image_overlay_text | default: "Weryfikujemy autentyczność każdego produktu" }}</p>
            </div> {% endcomment %}
          </div>
        </div>
      </div>

      <!-- Values Section -->
      <div class="about-values">
        <h2>{{ section.settings.values_title | default: "Nasze Wartości" }}</h2>
        <div class="values-grid">
          {% for block in section.blocks %}
            {% if block.type == 'value' %}
              <div class="value-item" {{ block.shopify_attributes }}>
                <div class="value-icon">
                  {{ block.settings.icon | default: "✓" }}
                </div>
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.description }}</p>
              </div>
            {% endif %}
          {% endfor %}
          
          {% comment %} Default values if no blocks {% endcomment %}
          {% if section.blocks.size == 0 %}
            <div class="value-item">
              <div class="value-icon">🔒</div>
              <h3>100% Autentyczność</h3>
              <p>Każdy produkt przechodzi profesjonalną weryfikację. Gwarantujemy oryginalność wszystkich oferowanych sneakersów i ubrań.</p>
            </div>
            <div class="value-item">
              <div class="value-icon">⚡</div>
              <h3>Szybka Realizacja</h3>
              <p>Sprawna obsługa zamówień i profesjonalne pakowanie. Twoje sneakersy dotrą bezpiecznie i na czas.</p>
            </div>
            <div class="value-item">
              <div class="value-icon">🎯</div>
              <h3>Limitowane Edycje</h3>
              <p>Specjalizujemy się w trudno dostępnych i limitowanych modelach. Znajdziesz u nas sneakersy, których nie ma nigdzie indziej.</p>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Stats Section -->
      <div class="about-stats">
        <div class="stat-item">
          <span class="stat-number">{{ section.settings.stat_1_number | default: "3+" }}</span>
          <span class="stat-label">{{ section.settings.stat_1_label | default: "Lata Doświadczenia" }}</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">{{ section.settings.stat_2_number | default: "100%" }}</span>
          <span class="stat-label">{{ section.settings.stat_2_label | default: "Oryginalne Produkty" }}</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">{{ section.settings.stat_3_number | default: "1000+" }}</span>
          <span class="stat-label">{{ section.settings.stat_3_label | default: "Zadowolonych Klientów" }}</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">{{ section.settings.stat_4_number | default: "24h" }}</span>
          <span class="stat-label">{{ section.settings.stat_4_label | default: "Czas Realizacji" }}</span>
        </div>
      </div>

      <!-- Team Section -->
      <div class="about-team">
        <h2>{{ section.settings.team_title | default: "Nasz Zespół" }}</h2>
        <p>{{ section.settings.team_description | default: "Jesteśmy zespołem pasjonatów sneakersów, którzy każdego dnia pracują nad tym, aby zapewnić Ci najlepsze produkty i obsługę." }}</p>
        
        <div class="team-values">
          <div class="team-value">
            <h3>Ekspertyza</h3>
            <p>Dogłębna znajomość branży sneakersów i streetwearu</p>
          </div>
          <div class="team-value">
            <h3>Pasja</h3>
            <p>Prawdziwa miłość do kultury sneakersów i mody ulicznej</p>
          </div>
          <div class="team-value">
            <h3>Profesjonalizm</h3>
            <p>Wysokie standardy obsługi i weryfikacji produktów</p>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="about-cta">
        <div class="about-cta-content">
          <h2>{{ section.settings.cta_title | default: "Masz Pytania?" }}</h2>
          <p>{{ section.settings.cta_description | default: "Skontaktuj się z nami! Nasz zespół chętnie pomoże Ci w wyborze idealnych sneakersów." }}</p>
          <a href="{{ section.settings.cta_link | default: '/pages/contact' }}" class="cta-button">
            {{ section.settings.cta_button_text | default: "Skontaktuj się z nami" }}
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
            </svg>
          </a>
        </div>
      </div>

    </div>
  </div>
</section>

